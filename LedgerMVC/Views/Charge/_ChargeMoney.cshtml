@*@model IEnumerable<LedgerMVC.Models.ChargeItem>*@
@{
    Layout = "";
}
<table id="ChargeList" class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>類別</th>
            <th>日期</th>
            <th>金額</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var chargeItem in Model)
        {
            <tr>
                <td>@chargeItem.ChargeRecordId</td>
                <td>@chargeItem.ChargeType</td>
                <!--日期 TO String-->
                <td>@string.Format("{0:yyyy-M-d}", chargeItem.ChargeDate)</td>
                <!--Int to Currency String-->
                <td>@String.Format("{0:C}", chargeItem.ChargePrice)</td>
            </tr>
        }
    </tbody>
</table>